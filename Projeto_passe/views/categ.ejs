<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="estilo1">
        <p>Bem vindo(a) ao <%= title %></p>
    </div>

    <br/>
    <form id="frmListaCat">
        <h3>Lista de Categorias de Passes</h3>
        <table style="width:50%">
            <thead>
                <tr style="background-color:#CCC">
                  <td style="width:50%">Código</td>
                  <td style="width:30%">Descrição</td>
                  <td style="width:15%">Minutos</td>
                  <td>Ações</td>
                </tr>
            </thead>
            <tbody>
                <% if (!resultados || resultados.length == 0) { %>
                    <tr>
                        <td colspan="4">Nenhuma categoria cadastrada.</td>
                    </tr>
                <% }
                  else {
                    resultados.forEach(function(categoria){%>
                    <tr>
                        <td style="width:50%"><%= categoria.codigoCategoria %></td>
                        <td style="width:50%"><%= categoria.descricaoCategoria %></td>
                        <td style="width:50%"><%= categoria.ValidadeEmMinutos %></td>
                    </tr>
                    <%})
                      }
                %>
            </tbody>
        </table>
    </form>
    <a href="/">Início</a>
  </body>
</html>
